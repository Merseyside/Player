<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height"
    android:layout_gravity="center_horizontal"
    android:background="@color/opacity_grey">

    <ImageView
        android:id="@+id/lastfm_cover"
        android:layout_width="@dimen/list_height"
        android:layout_height="@dimen/list_height"
        android:layout_centerVertical="true">
    </ImageView>

    <TextView
        android:id="@+id/lastfm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:layout_toRightOf="@+id/lastfm_cover"
        android:layout_toEndOf="@+id/lastfm_cover"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true">
    </TextView>

    <TextView
        android:id="@+id/lastfm_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/text_size_medium"
        android:layout_toRightOf="@+id/lastfm_cover"
        android:layout_toEndOf="@+id/lastfm_cover"
        android:layout_marginTop="@dimen/very_small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/lastfm_title"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true">
    </TextView>

    <TextView
        android:id="@+id/lastfm_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/text_size_medium"
        android:layout_toRightOf="@+id/lastfm_cover"
        android:layout_toEndOf="@+id/lastfm_cover"
        android:layout_marginTop="@dimen/very_small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/lastfm_artist"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true">
    </TextView>
</RelativeLayout>