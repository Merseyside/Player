<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@null"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_size">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/about_header"
                android:scaleType="fitXY"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/theme_dependent_header_gradient">
            </View>
            <TextView
                style="@style/shadoweffect"
                android:id="@+id/about_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/custom_font_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/action_about" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/changelog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/changelog"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/changelog_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/changelog"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changelog_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/changelog_imageview"
                android:layout_toEndOf="@+id/changelog_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/licence_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/clear_cross"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/license_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/license_textView"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/license_imageview"
                android:layout_toEndOf="@+id/license_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/check_license_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/license"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/check_license_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/check_license"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_license_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/check_license_imageview"
                android:layout_toEndOf="@+id/check_license_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/buy_license_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/purchase"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/buy_license_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/buy_license"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_license_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/buy_license_imageview"
                android:layout_toEndOf="@+id/buy_license_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/rate"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/rate_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/rate_player"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rate_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rate_imageview"
                android:layout_toEndOf="@+id/rate_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/youtube_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/youtube"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/youtube_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/youtube_channel"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youtube_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/youtube_imageview"
                android:layout_toEndOf="@+id/youtube_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/author_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/author"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/author_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/about_author"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/author_imageview"
                android:layout_toEndOf="@+id/author_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kryptex_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                app:srcCompat="@drawable/kryptex"
                android:maxWidth="@dimen/normal_icon_size"
                android:maxHeight="@dimen/normal_icon_size"
                android:id="@+id/kryptex_imageview"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:tint="?attr/theme_dependent_tint_color"
                android:layout_centerVertical="true"/>

            <TextView
                android:text="@string/kryptex"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kryptex_textView"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/kryptex_imageview"
                android:layout_toEndOf="@+id/kryptex_imageview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
